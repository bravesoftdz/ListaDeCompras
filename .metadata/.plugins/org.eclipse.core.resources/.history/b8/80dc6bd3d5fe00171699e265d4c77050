package controllers;

import java.awt.EventQueue;
import java.awt.Image;

import javax.swing.JFrame;
import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.Icon;
import javax.swing.ImageIcon;
import java.awt.Color;
import java.awt.SystemColor;
import javax.swing.UIManager;
import java.awt.Font;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class ListaComprasController {

	private JFrame frame;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ListaComprasController window = new ListaComprasController();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public ListaComprasController() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.getContentPane().setBackground(new Color(245, 245, 245));
		frame.setBounds(100, 100, 640, 480);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JButton btnFazerLista = new JButton("Fazer lista");
		btnFazerLista.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				
				FazerLista window = new FazerLista();
				window.setVisible(true);
				
				
				
			}
		});
		btnFazerLista.setFont(new Font("Dialog", Font.BOLD, 18));
		btnFazerLista.setBounds(31, 137, 148, 49);
		frame.getContentPane().add(btnFazerLista);
		
		JButton btnNewButton = new JButton("Gerar Lista");
		btnNewButton.setFont(new Font("Dialog", Font.BOLD, 18));
		btnNewButton.setBounds(31, 258, 148, 49);
		frame.getContentPane().add(btnNewButton);
		
		JLabel lblbackg = new JLabel("");
		lblbackg.setBackground(SystemColor.activeCaptionBorder);
		lblbackg.setBounds(127, 11, 487, 419);
		frame.getContentPane().add(lblbackg);
		ImageIcon icone = new ImageIcon(ListaComprasController.class.getResource("/imgs/family.jpg"));
		Image ima = icone.getImage();
		Image imagem = ima.getScaledInstance(lblbackg.getWidth(), lblbackg.getHeight(), Image.SCALE_DEFAULT);
		Icon ico = new ImageIcon(imagem);
		lblbackg.setIcon(ico);
		
	}
}
